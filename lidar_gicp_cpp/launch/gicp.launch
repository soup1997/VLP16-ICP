<?xml version="1.0"?>

<launch>
	<!-- Bag file play -->
	<node pkg="rosbag" type="play" name="rosbag" args="/home/soup1997/Downloads/wandering.bag" />

	<!-- Transform publisher from velodyne to imu_link -->
	<!--- Reference: https://github.com/RobustFieldAutonomyLab/LeGO-LOAM/issues/19 -->
	<node pkg="tf" type="static_transform_publisher" name="tf" args="-0.070, -0.030, -0.364 0.0 0.0 0.0 /base_link /imu_link 10"/>

	<!-- main gicp node -->
	<node pkg="lidar_gicp_cpp" type="lidar_gicp_cpp_node" name="gicp_node" output="screen" clear_params="true">
		<rosparam command="load" file="$(find lidar_gicp_cpp)/config/gicp_params.yaml" />
	</node>

	<!-- Rviz -->
	<node type="rviz" name="rviz" pkg="rviz" args="-d $(find lidar_gicp_cpp)/rviz/my_config.rviz"/>

</launch>
